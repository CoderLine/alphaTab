{
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2021",
      "dom"
    ],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "emitDecoratorMetadata": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitOverride": true,
    "sourceMap": false,
    "declaration": true,
    "incremental": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@test*": [
        "test*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules",
  ]
}