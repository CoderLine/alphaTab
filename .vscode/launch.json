    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch C# Compiler",
            "type": "node",
            "request": "launch",
            "args": [
                "src.compiler/csharp/CSharpTranspiler.ts",
                "--project",
                "tsconfig.build-csharp.json"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "TS_NODE_PROJECT": "tsconfig.build-csharp.json"
            }
        }
    ]
}