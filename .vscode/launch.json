{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Launch C# Compiler",
            "type": "node",
            "request": "launch",
            "args": [
                "src.compiler/csharp/CSharpTranspiler.ts",
                "--project",
                "tsconfig.build-csharp.json"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "smartStep": false,
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "TS_NODE_PROJECT": "tsconfig.build-csharp.json"
            }
        },

        {
            "name": "Launch TypeScript Generator",
            "type": "node",
            "request": "launch",
            "args": [
                "src.compiler/typescript/AlphaTabGenerator.ts",
                "--project",
                "tsconfig.build-csharp.json"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "smartStep": false,
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "TS_NODE_PROJECT": "tsconfig.build-csharp.json"
            }
        },
        
        {
            "name": "Launch JavaScript Compiler",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "windows": {
                "runtimeExecutable": "npm.cmd"
            },
            "runtimeArgs": [
                "run-script",
                "build",
                "--inspect-brk=5858"
            ],
            "port": 5858
        }
    ]
}