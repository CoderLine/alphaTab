            <td><img src="@Context.GetLink("/reference/property/showtabnoteontiedbend-enabled.png")" alt="Enabled" /></td>
            <td><img src="@Context.GetLink("/reference/property/showtabnoteontiedbend-disabled.png")" alt="Disabled" /></td>
        </tr>   
    </tbody>
</table>

<h2>Types</h2>

<table class="table table-striped table-condensed type-table">
    <tbody>    
        <tr>
            <td><code>bool</td>
        </tr>   
    </tbody>
</table>

<h2>Default Value</h2>

<code>true<code>

<h2>Example - C#</h2>

<pre>
<code class="language-csharp line-numbers">
var settings = Settings.Defaults; 
settings.ShowTabNoteOnTiedBend = true;
</code>
</pre>


<h2>Example - JavaScript</h2>

<pre>
<code class="language-javascript line-numbers">
var settings = {
    showTabNoteOnTiedBend: 'true'
};
var api = new alphaTab.platform.javaScript.AlphaTabApi(document.querySelector('#alphaTab'), settings);
var japi = $('#alphaTab').alphaTab(settings);
</code>
</pre>

<h2>Example - HTML</h2>

<pre>
<code class="language-html line-numbers">
&lt;div id="alphaTab" data-show-tab-note-on-tied-bend="true"&gt;&lt;/div&gt;
</code>
</pre>